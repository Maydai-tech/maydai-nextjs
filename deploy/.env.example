# ============================================
# SUPABASE SELF-HOSTED - CONFIGURATION
# ============================================
# Copie ce fichier en .env et remplis les valeurs

# Domain
SITE_URL=https://app.maydai.io
API_EXTERNAL_URL=https://api.maydai.io
STUDIO_URL=https://studio.maydai.io

# PostgreSQL
POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<GENERE_PAR_LE_SCRIPT>
POSTGRES_PORT=5432

# JWT - Generer avec scripts/generate-secrets.sh
JWT_SECRET=<GENERE_PAR_LE_SCRIPT>
ANON_KEY=<GENERE_PAR_LE_SCRIPT>
SERVICE_ROLE_KEY=<GENERE_PAR_LE_SCRIPT>

# GoTrue (Auth)
GOTRUE_EXTERNAL_EMAIL_ENABLED=true
GOTRUE_MAILER_AUTOCONFIRM=false
GOTRUE_SMTP_HOST=in-v3.mailjet.com
GOTRUE_SMTP_PORT=587
GOTRUE_SMTP_USER=<MAILJET_API_KEY>
GOTRUE_SMTP_PASS=<MAILJET_SECRET_KEY>
GOTRUE_SMTP_SENDER_NAME=MaydAI
GOTRUE_SMTP_ADMIN_EMAIL=noreply@maydai.io

# Dashboard (Basic Auth pour Studio)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=<GENERE_PAR_LE_SCRIPT>

# Logflare (optionnel, pour les logs)
LOGFLARE_API_KEY=<GENERE_PAR_LE_SCRIPT>

# Autres
SECRET_KEY_BASE=<GENERE_PAR_LE_SCRIPT>

# ============================================
# NEXT.JS APP
# ============================================

# Supabase (pointe vers l'instance self-hosted)
NEXT_PUBLIC_SUPABASE_URL=https://api.maydai.io
NEXT_PUBLIC_SUPABASE_ANON_KEY=<MEME_QUE_ANON_KEY>
SUPABASE_SERVICE_ROLE_KEY=<MEME_QUE_SERVICE_ROLE_KEY>

# OpenAI
OPENAI_API_KEY=<TA_CLE_OPENAI>
OPENAI_ASSISTANT_ID=<TON_ASSISTANT_ID>

# Mailjet
MAILJET_API_KEY=<TA_CLE_MAILJET>
MAILJET_SECRET_KEY=<TON_SECRET_MAILJET>

# CookieYes
NEXT_PUBLIC_COOKIEYES_ID=<TON_ID_COOKIEYES>

# Stripe (si utilise)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
