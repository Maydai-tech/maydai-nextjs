{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-dev-server",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "isBackground": true,
            "problemMatcher": {
                "owner": "next",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*▲ Next\\.js|^\\s*- starting",
                    "endsPattern": "^\\s*✓ Ready in|^\\s*- Local:|^\\s*Local:"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "get-dev-port",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "lsof -ti:3000,3001,3002,3003,3004,3005 | head -1 | xargs -I {} lsof -Pan -p {} -iTCP | grep LISTEN | grep -oE ':[0-9]+' | head -1 | cut -d: -f2 || echo '3000'"
            ],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Open Chrome Dynamic Port",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "PORT=$(lsof -ti:3000,3001,3002,3003,3004,3005 | head -1 | xargs -I {} lsof -Pan -p {} -iTCP | grep LISTEN | grep -oE ':[0-9]+' | head -1 | cut -d: -f2 || echo '3000'); open -a 'Google Chrome' \"http://localhost:$PORT\""
            ],
            "options": {
                "env": {
                    "PATH": "/usr/bin:/bin:/usr/sbin:/sbin"
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Open Chrome",
            "type": "shell",
            "command": "open",
            "args": [
                "-a",
                "Google Chrome",
                "http://localhost:3000"
            ],
            "options": {
                "env": {
                    "PATH": "/usr/bin:/bin:/usr/sbin:/sbin"
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Start App & Open Chrome",
            "dependsOrder": "sequence",
            "dependsOn": [
                "npm: dev",
                "Open Chrome"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Start App & Open Chrome (Dynamic)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "start-dev-server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "command": "sleep 3 && bash -c \"PORT=\\$(lsof -ti:3000,3001,3002,3003,3004,3005 | head -1 | xargs -I {} lsof -Pan -p {} -iTCP | grep LISTEN | grep -oE ':[0-9]+' | head -1 | cut -d: -f2 || echo '3000'); open -a 'Google Chrome' \\\"http://localhost:\\$PORT\\\"\"",
            "type": "shell"
        }
    ]
} 